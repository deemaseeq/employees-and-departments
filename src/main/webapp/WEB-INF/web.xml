<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    <display-name>Archetype Created Web Application</display-name>
  
    <servlet>
        <servlet-name>DepartmentsAddingServlet</servlet-name>
        <display-name>DepartmentsAddingServlet</display-name>
        <description></description>
        <servlet-class>server.departments.DepartmentsAddingServlet</servlet-class>
    </servlet>
  
    <servlet>
        <servlet-name>DepartmentsDeletingServlet</servlet-name>
        <display-name>DepartmentsDeletingServlet</display-name>
        <description></description>
        <servlet-class>server.departments.DepartmentsDeletingServlet</servlet-class>
    </servlet>
  
    <servlet>
        <servlet-name>DepartmentsEditingServlet</servlet-name>
        <display-name>DepartmentsEditingServlet</display-name>
        <description></description>
        <servlet-class>server.departments.DepartmentsEditingServlet</servlet-class>
    </servlet>
  
    <servlet>
        <servlet-name>EmployeesAddingServlet</servlet-name>
        <display-name>EmployeesAddingServlet</display-name>
        <description></description>
        <servlet-class>server.employees.EmployeesAddingServlet</servlet-class>
    </servlet>
  
    <servlet>
        <servlet-name>EmployeesDeletingServlet</servlet-name>
        <display-name>EmployeesDeletingServlet</display-name>
        <description></description>
        <servlet-class>server.employees.EmployeesDeletingServlet</servlet-class>
    </servlet>
  
    <servlet>
        <servlet-name>EmployeesEditingServlet</servlet-name>
        <display-name>EmployeesEditingServlet</display-name>
        <description></description>
        <servlet-class>server.employees.EmployeesEditingServlet</servlet-class>
    </servlet>
  
    <servlet-mapping>
        <servlet-name>DepartmentsAddingServlet</servlet-name>
        <url-pattern>/DepartmentsAddingServlet</url-pattern>
    </servlet-mapping>
  
    <servlet-mapping>
        <servlet-name>DepartmentsDeletingServlet</servlet-name>
        <url-pattern>/DepartmentsDeletingServlet</url-pattern>
    </servlet-mapping>
  
    <servlet-mapping>
        <servlet-name>DepartmentsEditingServlet</servlet-name>
        <url-pattern>/DepartmentsEditingServlet</url-pattern>
    </servlet-mapping>
  
    <servlet-mapping>
        <servlet-name>EmployeesAddingServlet</servlet-name>
        <url-pattern>/EmployeesAddingServlet</url-pattern>
    </servlet-mapping>
  
    <servlet-mapping>
        <servlet-name>EmployeesDeletingServlet</servlet-name>
        <url-pattern>/EmployeesDeletingServlet</url-pattern>
    </servlet-mapping>
  
    <servlet-mapping>
        <servlet-name>EmployeesEditingServlet</servlet-name>
        <url-pattern>/EmployeesEditingServlet</url-pattern>
    </servlet-mapping>
  
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/herokuDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
  
</web-app>
